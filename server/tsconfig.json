{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist/server",
    "rootDir": "..",
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["../*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../auth/**/*.ts",
    "../utils/**/*.ts",
    "../lib/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
} 